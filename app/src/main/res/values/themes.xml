<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Notes" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimaryDark">@color/deep_blue_2</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/prime_color</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:navigationBarColor">@color/prime_color</item>
        <item name="android:popupMenuStyle">@style/CustomPopupMenu</item>
        <!-- Status bar color. -->
        <!-- Customize your theme here. -->
    </style>
    <style name="DatePickerTheme" parent="@android:style/Widget.Material.DatePicker">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:datePickerMode">spinner</item>
        <item name="android:calendarViewShown">false</item>
        <item name="android:scrollbarSize">@dimen/material_emphasis_high_type</item>
        <item name="android:textSize">@dimen/number_picker_text_size</item>
    </style>
    <style name="Theme.Notes.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.Notes.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.Notes.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>