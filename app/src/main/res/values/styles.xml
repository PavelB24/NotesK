<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DatePickerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:datePickerMode">spinner</item>
        <item name="android:calendarViewShown">false</item>
        <item name="android:scrollbarSize">@dimen/material_emphasis_high_type</item>

    </style>

    <style name="CustomPopupMenu" parent="@android:style/Widget.PopupMenu">
        <item name="android:popupBackground">@color/prime_color</item>
    </style>

    <style name="CustomAppbar">
        <item name="android:backgroundTint">@color/card_view_grey_3</item>
        <item name="android:background">?selectableItemBackgroundBorderless</item>
    </style>

    <style name="CircularImgStyle">
        <item name="cornerSize">50%</item>
    </style>


    <style name="CustomChipTheme" parent="Widget.AppCompat.ActionBar">
        <item name="android:backgroundTint">@color/chip_color_selector</item>
        <item name="android:textColor">@color/nav_bar_color_selector</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:checkable">true</item>

    </style>

    <style name="title_edittext_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/edittext_margin_top</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColorHint">#B22B2B2B</item>
        <item name="android:padding">@dimen/Edittext_padding</item>
        <item name="android:textSize">@dimen/title_text_size</item>
    </style>

    <style name="description_edittext_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/edittext_margin_top</item>
        <item name="android:textColorHint">#B22B2B2B</item>
        <item name="android:inputType">textMultiLine|text</item>
        <item name="android:padding">@dimen/Edittext_padding</item>
        <item name="android:textSize">@dimen/note_description_text_size</item>
    </style>

    <style name="date_picker_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">@color/white</item>
        <item name="android:textColor">@color/black</item>

    </style>

    <style name="apply_button_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/apply_button_top_margin</item>
        <item name="android:backgroundTint">@color/light_blue_2</item>
        <item name="android:textColor">@color/back_button_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="item_notes_del_button">
        <item name="android:layout_width">@dimen/item_notes_buttons_width</item>
        <item name="android:layout_weight">0</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginStart">6dp</item>
        <item name="android:background">?selectableItemBackground</item>
    </style>

    <style name="item_notes_edit_button">
        <item name="android:layout_width">@dimen/item_notes_buttons_width</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:tintMode">src_atop</item>
    </style>

    <style name="item_notes_title_textview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">#C3C3C3</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="item_notes_description_textview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="item_notes_card_view_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:elevation">8dp</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="frame_layout_for_item_note_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:padding">@dimen/half_padding</item>
    </style>

    <style name="delete_all_notes_img_button_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:backgroundTintMode">src_atop</item>
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="MyCheckBox" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/checkbox_normal_color</item>
        <item name="colorControlActivated">@color/black</item>
    </style>
</resources>