<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/navigation_bar"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.percentlayout.widget.PercentFrameLayout
            android:id="@+id/container_for_fragment_land_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="@+id/layout_horizontal_unit_container"
            app:layout_constraintWidth_percent=".50" />

        <androidx.percentlayout.widget.PercentFrameLayout
            android:id="@+id/container_for_fragment_land_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:background="@drawable/red_srteams_black_background"
            app:layout_constraintStart_toEndOf="@+id/container_for_fragment_land_1"
            app:layout_constraintVertical_weight="1"
            app:layout_constraintWidth_percent=".50" />

        <FrameLayout
            android:id="@+id/layout_horizontal_unit_container"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>



    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/cherry"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/bottom_navigation_menu" />


</androidx.constraintlayout.widget.ConstraintLayout>