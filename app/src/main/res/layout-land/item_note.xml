<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/frame_layout_for_item_note_style">

    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="@color/card_view_grey"
        app:cardCornerRadius="@dimen/item_notes_corner_radius"
        app:cardUseCompatPadding="true"
        style="@style/item_notes_card_view_style">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?selectableItemBackground"
            android:orientation="horizontal"
            android:padding="16dp">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="?selectableItemBackground"
                android:orientation="vertical"
                android:padding="@dimen/standart_padding">


                <TextView
                    android:id="@+id/note_title_textview"
                    style="@style/item_notes_title_textview" />

                <TextView
                    android:id="@+id/note_description_textview"
                    style="@style/item_notes_description_textview" />
            </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>

</FrameLayout>