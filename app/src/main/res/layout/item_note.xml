<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/frame_layout_for_item_note_style">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        style="@style/item_notes_card_view_style"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/item_card_view_color"
        app:cardCornerRadius="@dimen/item_notes_corner_radius"
        app:cardElevation="0dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="@dimen/standart_padding">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/notes_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="?selectableItemBackgroundBorderless"
                    android:ellipsize="middle"
                    android:gravity="center"
                    android:theme="@style/MyCheckBox" />

            </LinearLayout>


            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/item_note_img_view"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center_vertical"
                android:padding="3dp"
                app:shapeAppearance="@style/CircularImgStyle"
                app:strokeColor="#3A50D8"
                app:strokeWidth="3dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?selectableItemBackgroundBorderless"
                android:orientation="vertical"
                android:padding="@dimen/standart_padding">


                <TextView
                    android:id="@+id/note_title_textview"
                    style="@style/item_notes_title_textview"
                    android:layout_marginEnd="16dp"
                    android:textAlignment="viewEnd" />


                <TextView
                    android:id="@+id/creation_date_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:singleLine="true"
                    android:textAlignment="textEnd"
                    android:textColor="#C3C3C3"
                    android:textSize="18sp" />

            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/favorite_img_button"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="?selectableItemBackgroundBorderless"
                    android:exitFadeDuration="@android:integer/config_mediumAnimTime"
                    android:src="@drawable/ic_favourites_black_star"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</FrameLayout>