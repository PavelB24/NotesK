<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/frame_layout_for_item_note_style">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        app:cardBackgroundColor="#26BABABA"
        app:cardCornerRadius="@dimen/item_notes_corner_radius"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        app:cardElevation="0dp"
        style="@style/item_notes_card_view_style">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/standart_padding">

            <CheckBox
                android:id="@+id/notes_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:ellipsize="middle"
                android:background="?selectableItemBackground"
                android:gravity="center"
                android:theme="@style/MyCheckBox"
                />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="?selectableItemBackground"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/standart_padding">


                <TextView
                    android:id="@+id/note_title_textview"
                    style="@style/item_notes_title_textview"
                    android:textAlignment="viewStart"/>

                <TextView
                    android:id="@+id/note_description_textview"
                    style="@style/item_notes_description_textview"
                    android:textSize="@dimen/item_note_description"/>
            </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>

</FrameLayout>