<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/note_view_fragment_scrollview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grey_background_4"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/consgt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/note_page_img_view"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginStart="68dp"
            android:layout_marginEnd="68dp"
            android:layout_marginTop="40dp"
            android:padding="5dp"
            android:src="@drawable/ic_baseline_add_a_photo_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:clickable="true"
            android:focusable="true"
            android:visibility="gone"
            app:shapeAppearanceOverlay="@style/CircularImgStyle"/>


        <TextView
            android:id="@+id/note_title_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/standart_padding"
            android:textColor="@color/black"
            android:textSize="@dimen/title_text_size"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/note_page_img_view" />

        <TextView
            android:id="@+id/note_description_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/standart_padding"
            android:textColor="@color/black"
            android:textSize="@dimen/title_text_size"
            app:layout_constraintTop_toBottomOf="@id/note_title_text_view" />


            <TextView
                android:id="@+id/location_text_view"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/st_margin"
                android:lineSpacingMultiplier="1.5"
                android:ellipsize="end"
                android:padding="@dimen/standart_padding"
                android:textColor="@color/black"
                android:textColorLink="@color/blue"
                android:textIsSelectable="true"
                android:textSize="@dimen/note_view_fragment_notes_description_text_size"
               app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/note_description_textview"  />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/show_on_map_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/show_on_map_button_text"
            android:layout_marginEnd="35dp"
            android:backgroundTint="@color/light_blue_2"
            android:layout_width="wrap_content"
            android:layout_marginTop="5dp"
            app:cornerRadius="16dp"
            android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/date_of_event_textview"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:autoLink="web"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/show_on_map_button"
                android:lineSpacingMultiplier="1.5"
                android:layout_marginStart="@dimen/st_margin"
                android:padding="@dimen/standart_padding"
                android:layout_marginEnd="@dimen/st_margin"
                android:textColor="@color/black"
                android:textColorLink="@color/blue"
                android:textIsSelectable="true"
                android:textSize="@dimen/note_view_fragment_notes_description_text_size" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>