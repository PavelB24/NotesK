<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/profile_blue_abstract"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:textColor="@color/black"
        android:id="@+id/profile_title_text_view"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:textSize="@dimen/title_text_size"/>
    <EditText
        android:id="@+id/profile_login_edittext"
        android:hint="@string/profile_login_edittext_hint"
        android:layout_marginTop="@dimen/edittext_margin_top"
        app:layout_constraintTop_toBottomOf="@id/profile_title_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/black"
        />
    <EditText
        android:id="@+id/profile_password_edittext"
        android:hint="@string/profile_password_edittext_hint"
        android:layout_marginTop="@dimen/edittext_margin_top"
        app:layout_constraintTop_toBottomOf="@id/profile_login_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/black"
        />

    <LinearLayout
        android:id="@+id/horizontal_container_profile_enter_layout"
        app:layout_constraintTop_toBottomOf="@+id/profile_password_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView

            android:layout_marginHorizontal="@dimen/fab_margin"
            android:layout_width="0dp"
            android:text="Have not got a profile yet?"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/profile_create_new_profile_button"
            android:text="Registration"
            android:textColor="@color/checkbox_activated_color"
            android:layout_marginHorizontal="@dimen/fab_margin"
            android:layout_weight="1"
            android:focusable="false"
            android:layout_width="0dp"
            android:backgroundTint="#45000000"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <com.google.android.material.button.MaterialButton
        app:layout_constraintTop_toBottomOf="@id/horizontal_container_profile_enter_layout"
        android:id="@+id/profile_login_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="28dp"
        android:text="@string/profile_button_text"
        android:textColor="@color/black"
        android:backgroundTint="@color/deep_blue"
        />


</androidx.constraintlayout.widget.ConstraintLayout>