<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="32dp"
    android:background="@drawable/grey_background_4"
    android:orientation="vertical">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/profile_title_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/title_text_size"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/profile_login_edittext_layout"
            android:layout_width="match_parent"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/profile_title_text_view">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/profile_login_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/st_margin" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/profile_password_layout"
            android:layout_width="match_parent"
            app:endIconMode="password_toggle"
            app:errorIconDrawable="@android:drawable/stat_notify_error"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/st_margin"
            app:layout_constraintTop_toBottomOf="@+id/profile_login_edittext_layout">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/profile_password_edittext"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>


        <LinearLayout
            android:id="@+id/horizontal_container_profile_enter_layout"
            android:layout_width="392dp"
            android:layout_height="71dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profile_password_layout">

            <TextView

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/st_margin"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:text="@string/profile_ask_text"
                android:textSize="20sp"
                android:textStyle="bold" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/profile_create_new_profile_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/st_margin"
                android:layout_weight="1"
                android:backgroundTint="#51000000"
                android:text="@string/reg_button_text"
                app:cornerRadius="16dp"
                android:textColor="@color/checkbox_activated_color" />

        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/profile_login_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="28dp"
            app:cornerRadius="16dp"
            android:backgroundTint="@color/light_blue_2"
            android:text="@string/profile_button_text"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/horizontal_container_profile_enter_layout" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>