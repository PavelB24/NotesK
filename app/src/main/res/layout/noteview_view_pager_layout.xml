<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager_2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/data_manager_toggle_button_light_grey"
        app:layout_constraintBottom_toTopOf="@id/tabs_view"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="0dp" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabs_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabIndicator="@color/black"
        android:background="@color/card_view_grey_2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_pager_2"
        app:tabIconTint="@color/tab_color_selector"
        app:tabInlineLabel="true"
        app:tabMode="scrollable"
        app:tabPadding="4dp"
        app:tabTextColor="#66000000"
        app:tabSelectedTextColor="@color/black"
        />


</androidx.constraintlayout.widget.ConstraintLayout>